<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd
         http://www.springframework.org/schema/aop
         http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <bean id="test3" class="com.chang.spring.Test3">
    </bean>

    <bean id="adviceSample" class="com.chang.spring.AdviceSample"></bean>
    <aop:config>
        <aop:aspect id="advice" ref="adviceSample">
            <!--定义一个共同的切点-->
            <aop:pointcut id="cutpoint" expression="execution(* com.chang.spring.Test3.method(..)) "/>
            <aop:before pointcut-ref="cutpoint" method="before"/>
        </aop:aspect>
    </aop:config>

</beans>